<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="md.fusionworks.apapura">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.ApaPura">
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.activity.MapActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ApaPura.Map">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.HealthActivity"
            android:label="@string/title_activity_health"
            android:theme="@style/Theme.ApaPura.Health" />
        <activity
            android:name=".ui.activity.AddWellActivity"
            android:label="@string/title_activity_add_well"
            android:parentActivityName=".ui.activity.MapActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ApaPura.AddWell">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="md.fusionworks.apapura.ui.activity.MapActivity" />
        </activity>
        <activity
            android:name=".ui.activity.WellDetailActivity"
            android:label="@string/module_title_well_detail"
            android:parentActivityName=".ui.activity.MapActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ApaPura.WellDetail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="md.fusionworks.apapura.ui.activity.MapActivity" />
        </activity>
        <activity
            android:name=".ui.activity.MarkAPointOnMapActivity"
            android:label="@string/title_activity_mark_apoint_on_map"
            android:parentActivityName=".ui.activity.AddWellActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ApaPura.MarkAPointOnMap">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="md.fusionworks.apapura.ui.activity.AddWellActivity" />
        </activity>
    </application>

</manifest>
