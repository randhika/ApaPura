<resources>

    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.Light" />

    <style name="Theme" parent="FrameworkRoot.Theme" />

    <style name="Theme.ApaPura.Base" parent="Theme">
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/divider_dark</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:popupMenuStyle">@style/Widget.ApaPura.PopupMenu</item>
        <item name="colorAccent">@color/accent </item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearance.LargePopupMenu
        </item>
    </style>

    <style name="Theme.ApaPura" parent="Theme.ApaPura.Base" />

    <style name="Theme.ApaPura.WithNavDrawer" parent="Theme.ApaPura" />

    <style name="Theme.ApaPura.Map" parent="Theme.ApaPura.WithNavDrawer" />

    <style name="Theme.ApaPura.Health" parent="Theme.ApaPura.WithNavDrawer" />

    <style name="Theme.ApaPura.AboutApp" parent="Theme.ApaPura.WithNavDrawer" />
    <style name="Theme.ApaPura.Treatment" parent="Theme.ApaPura.WithNavDrawer" />

    <style name="Theme.ApaPura.AddWell" parent="Theme.ApaPura.WithNavDrawer" />
    <style name="Theme.ApaPura.WellDetail" parent="Theme.ApaPura.WithNavDrawer" />
    <style name="Theme.ApaPura.MarkAPointOnMap" parent="Theme.ApaPura" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="Widget.ApaPura.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColor">#000</item>
    </style>

    <style name="TextAppearance.LargePopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WellRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>
    <style name="Theme.ApaPura.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ApaPura.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
